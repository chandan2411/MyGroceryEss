<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/llParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20dp"
                    android:background="@color/white"
                    android:fontFamily="@font/ubuntu_medium"
                    android:gravity="center_horizontal"
                    android:text="@string/we_will_send_an_sms_with_a_confirmation_code_to_this_number"
                    android:textSize="@dimen/text_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:autofillHints=""
                            android:background="@color/cardBackgroundColor"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ems="10"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center"
                            android:hint="@string/_91"
                            android:inputType="textPersonName"
                            android:longClickable="false"
                            android:textColor="@color/grey_text_color"
                            android:textSize="@dimen/text_medium"
                            android:theme="@style/MyEditTextTheme"
                            tools:ignore="LabelFor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/margin_1dp"
                                android:layout_height="@dimen/margin_10dp"
                                android:background="@color/divider" />

                            <View
                                android:layout_width="44dp"
                                android:layout_height="@dimen/margin_1dp"
                                android:layout_gravity="bottom"
                                android:background="@color/divider" />

                            <View
                                android:layout_width="@dimen/margin_1dp"
                                android:layout_height="@dimen/margin_10dp"
                                android:background="@color/divider" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtPhone"
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:autofillHints=""
                            android:background="@color/cardBackgroundColor"
                            android:digits="0123456789"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_regular"
                            android:gravity="center"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="@color/grey_text_color"
                            android:textSize="@dimen/text_medium"
                            android:theme="@style/MyEditTextTheme"
                            tools:ignore="LabelFor" />

                        <LinearLayout
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/margin_1dp"
                                android:layout_height="@dimen/margin_10dp"
                                android:background="@color/divider" />

                            <View
                                android:layout_width="133dp"
                                android:layout_height="@dimen/margin_1dp"
                                android:layout_gravity="bottom"
                                android:background="@color/divider" />

                            <View
                                android:layout_width="@dimen/margin_1dp"
                                android:layout_height="@dimen/margin_10dp"
                                android:background="@color/divider" />
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/divider"
                    app:layout_constraintTop_toBottomOf="@+id/edtPhone" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="@string/use_your_referral_code_here"
                    android:textColor="@color/grey_text_color"
                    android:textSize="@dimen/text_small" />

                <EditText
                    android:id="@+id/etReferralCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:background="@drawable/grey_outline"
                    android:enabled="false"
                    android:fontFamily="@font/ubuntu_light"
                    android:hint="@string/enter_code"
                    android:inputType="text"
                    android:maxLength="6"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/grey_text_color"
                    android:textSize="@dimen/text_medium"
                    tools:ignore="LabelFor" />

                <TextView
                    android:id="@+id/tvNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/divider"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center_horizontal"
                    android:padding="15dp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="@dimen/padding_10"
            android:orientation="vertical">

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle"
                android:fontFamily="@font/ubuntu_light"
                android:padding="5dp"
                android:text="@string/or"
                android:textColor="@color/divider"
                android:textSize="@dimen/text_small" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLoginWithFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/margin_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/fb_login" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Login with facebook"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLoginWithGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="@dimen/margin_15dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/margin_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/google_login" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Login with google"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</ScrollView>

