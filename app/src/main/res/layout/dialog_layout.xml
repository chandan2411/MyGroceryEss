<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_20dp"
    android:paddingTop="@dimen/padding_10"
    android:paddingEnd="@dimen/margin_20dp"
    android:paddingBottom="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Enter Pincode"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_10"
            android:src="@drawable/ic_close_black_24dp" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_regular"
        android:text="Enter pincode to see item deliverable"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/ivLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_location_on_grey_24dp" />

        <EditText
            android:maxLength="6"
            android:maxLines="1"
            android:inputType="number"
            android:digits="0123456789"
            android:id="@+id/edtApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_toEndOf="@+id/ivLoc"
            android:drawablePadding="@dimen/padding_10" />

        <TextView
            android:id="@+id/tvApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/ubuntu_medium"
            android:paddingStart="@dimen/padding_10"
            android:paddingTop="@dimen/margin_5dp"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/margin_5dp"
            android:text="Apply"
            android:textColor="@color/red"
            android:textSize="@dimen/text_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="We are currently not delivering at this location. We shall back soon"
        android:textColor="@color/red"
        android:textSize="@dimen/text_xsmall"
        android:visibility="invisible" />


</LinearLayout>