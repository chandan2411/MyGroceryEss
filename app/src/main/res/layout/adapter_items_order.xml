<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/margin_2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_15dp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_weight=".3">


                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/grocery_staples" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_weight=".7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_5dp">

                    <TextView
                        android:id="@+id/productTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".75"
                        android:fontFamily="@font/ubuntu_regular"
                        android:gravity="start"
                        android:text="Grofe Kachi Ghan Oil"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:id="@+id/llPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_weight=".35"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_medium"
                            android:text="@string/indian_rupee_sign"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_large" />

                        <TextView

                            android:id="@+id/tvSP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_medium"
                            android:text="@string/_00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_large" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvProductQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="200 g"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_medium" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10">

                    <RelativeLayout
                        android:id="@+id/rlMRP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/indian_rupee_sign"
                            android:textColor="@color/divider"
                            android:textSize="@dimen/text_large" />

                        <TextView
                            android:id="@+id/tvMRP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/tv1"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/_00"
                            android:textColor="@color/divider"
                            android:textSize="@dimen/text_large" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:background="@color/divider" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="@string/indian_rupee_sign"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large" />

                    <TextView
                        android:id="@+id/tvSP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="@string/_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="X"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large" />

                    <TextView
                        android:id="@+id/tvQuantityAdded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/backgroungColor" />

    </LinearLayout>

</androidx.cardview.widget.CardView>