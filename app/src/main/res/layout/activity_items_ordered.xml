<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroungColor"
    android:orientation="vertical"
    tools:context=".view.ui.activity.ItemsOrderedActivity">


    <RelativeLayout
        android:id="@+id/rlBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <include
            layout="@layout/white_toolabr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ubuntu_regular"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_medium" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlItemOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivNoCart"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/no_orders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivNoCart"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/ubuntu_regular"
                android:gravity="center"
                android:text="Looks like you haven't order any product"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvStartShopping"
                style="@android:style/MediaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shop_button_bg"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="10dp"
                android:text="Start Shopping"
                android:textColor="@color/gen_white"
                android:textSize="@dimen/text_large" />

        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlBanner"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroungColor"
            android:orientation="vertical"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/tvPlacedDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="@dimen/padding_10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small" />

            <!--<TextView
                android:id="@+id/tvOrderStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:padding="@dimen/padding_10"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />-->
            <TextView
                    android:id="@+id/tvTrackOrder"
                style="@android:style/MediaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:background="@drawable/shop_button_bg"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:padding="10dp"
                android:textAllCaps="true"
                android:text="Track your order"
                android:textColor="@color/gen_white"
                android:textSize="@dimen/text_large" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDeliveryDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_15dp"
                    android:paddingTop="30dp"
                    android:paddingEnd="@dimen/margin_15dp"
                    android:paddingBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="Delivered on"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/tvDeliveredDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvItemAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvItemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="4 ITEMS"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/tvAmountCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="AMOUNT:R7907"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_medium" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvProductList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="@string/payment_summary"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginTop="1dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginEnd="@dimen/margin_15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/m_r_p"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/indian_rupee_sign"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/tvTotalMRPAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/product_discount"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/minus"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/indian_rupee_sign"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/tvTotalProductDiscountAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/essentials_cash"
                            android:textColor="@color/sky_blue"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/minus"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/indian_rupee_sign"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/tvEssentialsDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:textColor="@color/sky_blue"
                                android:textSize="@dimen/text_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_10"
                        android:paddingBottom="@dimen/padding_10"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/delivery_charges"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".5"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/tvDelPlus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/plus"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_medium"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvDelRupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/indian_rupee_sign"
                                android:textColor="@color/red"
                                android:textSize="@dimen/text_medium"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvDeliveryCharges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:textAllCaps="true"
                                android:textColor="@color/green"
                                android:textSize="@dimen/text_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/backgroungColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_10"
                        android:paddingBottom="@dimen/padding_10"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/final_paid_amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_large" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="@string/indian_rupee_sign"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_large" />

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_large" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginTop="1dp"
                android:background="@color/addaddressbkg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="0dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/addaddressbkg"
                    android:paddingStart="@dimen/margin_15dp"
                    android:paddingTop="@dimen/margin_20dp"
                    android:paddingEnd="@dimen/margin_15dp"
                    android:paddingBottom="@dimen/margin_20dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:fontFamily="@font/ubuntu_regular"
                        android:text="Your total savings"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="end">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="@string/indian_rupee_sign"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_large" />

                        <TextView
                            android:id="@+id/tvTotalSaving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_large" />

                        <TextView
                            android:id="@+id/tvTotalDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/ubuntu_regular"
                            android:textColor="@color/green"
                            android:textSize="@dimen/text_large" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/margin_15dp"
                    android:paddingTop="@dimen/margin_20dp"
                    android:paddingEnd="@dimen/margin_15dp"
                    android:paddingBottom="@dimen/margin_20dp">

                    <ImageView
                        android:id="@+id/ivPaymentMode"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>

                    <TextView
                        android:id="@+id/tvPaymentMode"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/margin_15dp"
                    android:paddingTop="@dimen/margin_20dp"
                    android:paddingEnd="@dimen/margin_15dp"
                    android:paddingBottom="@dimen/margin_20dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_5dp"
                        android:paddingBottom="@dimen/margin_5dp">

                        <ImageView
                            android:id="@+id/ivImageType"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_location_on_grey_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:layout_toEndOf="@+id/ivImageType"
                            android:fontFamily="@font/ubuntu_regular"
                            android:text="Delivery Address"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_medium" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvAddressType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/ubuntu_bold"
                        android:paddingTop="@dimen/margin_2dp"
                        android:paddingBottom="@dimen/margin_2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:fontFamily="@font/ubuntu_regular"
                        android:paddingTop="@dimen/margin_2dp"
                        android:paddingBottom="@dimen/margin_2dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp">

                        <TextView
                            android:id="@+id/tvHouseOrOfficeNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp">

                        <TextView
                            android:id="@+id/tvStreetName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLandmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tvLandmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:paddingTop="@dimen/margin_2dp"
                            android:paddingBottom="@dimen/margin_2dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp">

                        <TextView
                            android:id="@+id/tvPincode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp">


                        <TextView
                            android:id="@+id/tvMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium" />

                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStroreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/margin_15dp"
                    android:paddingTop="@dimen/margin_20dp"
                    android:paddingEnd="@dimen/margin_15dp"
                    android:paddingBottom="@dimen/margin_20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/market" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_medium"
                            android:text="Essentials Store"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:text="Order ID: "
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tvOrderId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ubuntu_regular"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_small" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvCancelOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/margin_2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/margin_20dp">

                    <TextView
                        android:id="@+id/tvCancelOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Cancel the order"
                        android:textColor="@color/divider"
                        android:textSize="@dimen/text_large" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCustomerSupport"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_yellow"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/theme_yellow"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/customer_support" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_10"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Customer Support"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <include
        layout="@layout/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlBanner" />


</RelativeLayout>