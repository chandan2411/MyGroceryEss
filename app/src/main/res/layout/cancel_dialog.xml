<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_10"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Do you want to cancel this order ?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_medium"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:text="Select a reason and helps us serve you more better (Optional)"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_20dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10">

        <RadioButton
            android:textColorHighlight="@color/theme_yellow"
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:text="Ordered By Mistake" />

        <RadioButton
            android:textColorHighlight="@color/theme_yellow"
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:text="Ordered Wrong Product" />

        <RadioButton
            android:textColorHighlight="@color/theme_yellow"
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:text="I want to order later" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Other reason"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium" />

    <MultiAutoCompleteTextView
        android:id="@+id/edtReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:background="@drawable/grey_outline"
        android:gravity="start"
        android:hint="Type the reason for return(optional"
        android:minLines="4"
        android:padding="@dimen/padding_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shop_button_border"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:padding="12dp"
            android:text="Cancel"
            android:textColor="@color/theme_yellow"
            android:textSize="@dimen/text_large" />

        <TextView
            android:id="@+id/tvOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:background="@drawable/shop_button_bg"
            android:fontFamily="@font/ubuntu_medium"
            android:gravity="center"
            android:padding="12dp"
            android:text="Ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />
    </LinearLayout>

</LinearLayout>