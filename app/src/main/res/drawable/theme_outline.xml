<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/brown_dark1"
                android:endColor="@color/brown_dark"
                android:gradientRadius="360"
                android:startColor="@color/brown_dark2"
                android:type="radial" />


        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/brown_dark3" />
        </shape>
    </item>

</layer-list>